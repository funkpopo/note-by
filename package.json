{
  "name": "Note-By",
  "version": "0.1.0",
  "private": true,
  "main": "electron/out/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently --kill-others \"npm run dev\" \"npm run electron:dev:compile\" \"wait-on http://localhost:3000 && npm run electron:dev:start\"",
    "electron:dev:compile": "tsc -p electron/tsconfig.json -w",
    "electron:dev:start": "cross-env NODE_ENV=development ELECTRON_NO_ATTACH_CONSOLE=true electron .",
    "electron:build:compile": "tsc -p electron/tsconfig.json",
    "electron:build": "npm run build && npm run electron:build:compile && electron-builder",
    "electron:start": "cross-env NODE_ENV=production electron ."
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-serve": "^2.1.1",
    "electron-store": "^10.0.1",
    "lucide-react": "^0.479.0",
    "md-editor-rt": "^5.4.0",
    "next": "15.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@tailwindcss/postcss": "^4.0.14",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.1",
    "electron-builder": "^26.0.11",
    "eslint": "^9.22.0",
    "eslint-config-next": "15.2.2",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.3"
  }
}
