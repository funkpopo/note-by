{
  "name": "note-by",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "exports": {
    "./electron/preload.js": {
      "require": "./electron/preload.js"
    }
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "node scripts/dev.js",
    "electron:dev:manual": "concurrently --kill-others \"npm run dev\" \"cross-env ELECTRON_DEV=true electron .\"",
    "electron:build": "next build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "cherry-markdown": "^0.8.58",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.483.0",
    "next": "15.2.3",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "openai": "^4.87.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "webdav": "^5.8.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@tailwindcss/postcss": "^4.0.14",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.2",
    "electron-builder": "^26.0.11",
    "eslint": "^9.22.0",
    "eslint-config-next": "15.2.3",
    "tailwindcss": "^4.0.14",
    "typescript": "^5.8.2"
  },
  "build": {
    "appId": "com.note-by.app",
    "productName": "Note-By",
    "files": [
      ".next/**/*",
      "node_modules/**/*",
      "electron/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "resources/markdown",
        "to": "markdown"
      }
    ]
  }
}
